<?xml version="1.0" encoding="UTF-8" ?>
<data>
    <odoo>
        <record model="ir.ui.view" id="pos_customer_deposit_line_add_groups_form_view">
            <field name="name">pos_customer_deposit_line_form_view</field>
            <field name="model">pos.customer.deposit.line</field>
            <field name="inherit_id" ref="pos_customer_deposit.pos_customer_deposit_line_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="replace">
                    <field name="journal_id" options="{'no_create': 1, 'no_create_edit': 1}"
                                       attrs="{'readonly': [('state', 'not in', ('draft','to_confirm', 'confirm'))],
                                        'required': [('state', '!=', 'draft')]}" groups="izi_res_permissions.group_cashier"/>
                </xpath>
            </field>
        </record>
    </odoo>
</data>
