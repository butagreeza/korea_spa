<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="activity_history_resource_tree_view">
            <field name="name">Activity History Resource</field>
            <field name="model">activity.history.resource</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="activity_history_resource_action">
            <field name="name">Activity History Resource</field>
            <field name="res_model">activity.history.resource</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="Activity History Resource" id="activity_history_resource_setting_menu" action="activity_history_resource_action" parent="crm.crm_menu_config" sequence="12"/>
    </data>
</odoo>