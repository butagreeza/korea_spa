<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="activity_history_tree_view">
            <field name="name">Activity History</field>
            <field name="model">activity.history</field>
            <field name="arch" type="xml">
                <tree default_order='create_date desc'>
                    <field name="therapy_record_id"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="product_id"/>
                    <field name="type"/>
                    <field name="object"/>
                    <field name="date_deadline"/>
                    <field name="date_move_remind"/>
                    <field name="user_transfer"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="activity_history_form_view">
            <field name="name">Activity History</field>
            <field name="model">activity.history</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_assign" string="Assign" class="btn-primary" type="object" attrs="{'invisible':[('state','not in', ['new', 'assigned', 'move_remind'])]}"/>
                        <button name="action_create_interaction"
                                string="Create Interaction" class="btn-primary" attrs="{'invisible':[('state','not in', ['assigned', 'move_remind'])]}" type="object"/>
                        <button name="schedule_transfer" string="Schedule Transfer" type="object" attrs="{'invisible':[('state','not in', ['new','assigned', 'move_remind'])]}"/>
                        <button name="cancel_activity_history" string="Cancel" attrs="{'invisible':[('state','in', ['interacted', 'cancel'])]}" type="object" confirm="Bạn có chắc chắn muốn hủy lịch nhắc này!?"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,assigned,move_remind,interacted" nolabel="1" readonly="1" />
                    </header>
                    <sheet>
                        <group>
                            <group name="column_left">
                                <field name="is_picking" invisible="True"/>
                                <field name="is_using_service" invisible="True"/>
                                <field name="partner_id" attrs="{'readonly': [('state', '!=', 'new')]}" options="{'no_create': True}" required="True"/>
                                <field name="therapy_record_id" context="{'search_activity': True, 'partner_id': partner_id}" options="{'no_create': True}" domain="[('partner_id', '=', partner_id)]" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                                <field name="object" attrs="{'readonly': [('state', '!=', 'new')]}" required="True"/>
                                <field name="type" attrs="{'readonly': [('state', '!=', 'new')]}" required="True"/>
                                <field name="user_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                                <field name="date_deadline" attrs="{'readonly': [('state', '!=', 'new')]}" required="True"/>
                                <field name="date_move_remind" attrs="{'invisible': [('date_move_remind', '=', False)]}"/>
                                <field name="user_transfer" attrs="{'invisible': [('date_move_remind', '=', False)]}"/>
                                <field name="schedule_transfer_reason_id" attrs="{'invisible': [('date_move_remind', '=', False)]}"/>
                            </group>
                            <group name="column_right">
                                <field name="mail_activity_type_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'new')]}" required="True"/>
                                <field name="product_id" options="{'no_create': True}"/>
                                <field name="resource_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                <field name="using_id" options="{'no_create': True}" attrs="{'invisible': [('is_using_service', '=', False)]}"/>
                                <field name="picking_id" options="{'no_create': True}" attrs="{'invisible': [('is_picking', '=', False)]}"/>
                                <field name="partner_interaction_id" readonly="True"/>
                            </group>
                        </group>
                        <label for="note"/>
                        <field name="note" attrs="{'readonly': [('state', '!=', 'new')]}"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--Search nhắc lịch-->
        <record model="ir.ui.view" id="activity_history_search_view">
            <field name="name">Activity history</field>
            <field name="model">activity.history</field>
            <field name="arch" type="xml">
                <search string="Activity history">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="mail_activity_type_id"/>

                    <separator/>
                    <filter string="Mới" name="state_new"
                            domain="[('state', '=', 'new')]"/>
                    <filter string="Đã giao" name="state_assigned"
                            domain="[('state', '=', 'assigned')]"/>
                    <filter string="Chuyển lịch" name="state_move_remind"
                            domain="[('state', '=', 'move_remind')]"/>
                    <filter string="Đã tương tác" name="state_interacted"
                            domain="[('state', '=', 'interacted')]"/>
                    <separator/>
                    <filter string="Lịch nhắc thuốc" name="type_out_of_medicine"
                            domain="[('type', '=', 'out_of_medicine')]"/>
                    <filter string="Lịch nhắc chăm sóc" name="type_customer_care"
                            domain="[('type', '=', 'customer_care')]"/>
                    <separator/>
                    <filter string="Lịch nhắc tư vấn" name="object_consultant"
                            domain="[('object', '=', 'consultant')]"/>
                    <filter string="Lịch nhắc CSKH" name="object_customer_care"
                            domain="[('object', '=', 'customer_care')]"/>
                    <filter name="date_now" string="Hôm nay" domain="['|', ('date_move_remind', '=', datetime.datetime.now().strftime('%Y-%m-%d')), '&amp;', ('date_move_remind', '=', False),('date_deadline', '=', datetime.datetime.now().strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <separator/>
                        <filter string="Người tương tác" context="{'group_by': 'user_id'}"/>
                        <separator/>
                        <filter string="Giai đoạn" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Khách hàng" context="{'group_by':'partner_id'}"/>
                        <separator/>
                        <filter string="Hồ sơ trị liệu" context="{'group_by':'therapy_record_id'}"/>
                        <separator/>
                        <filter string="Vị trí công tác" context="{'group_by':'object'}"/>
                        <separator/>
                        <filter string="Loại" context="{'group_by':'type'}"/>
                        <separator/>
                    </group>
                </search>
            </field>
        </record>

        <record id="activity_history_kanban_view" model="ir.ui.view">
            <field name="name">Activity History</field>
            <field name="model">activity.history</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" create="0" delete="0" archivable="false">
                    <field name="therapy_record_id"/>
                    <field name="color" invisible="True"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{record.color.raw_value} oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <p style="font-size: 15px;font-weight: bold;"><field name="name"/></p>
                                    <ul>
                                        <li><b>Hồ sơ trị liệu: </b><field name="therapy_record_id"/></li>
                                        <li><b>Khách hàng:</b><field name="partner_id"/></li>
                                        <li><b>Đối tượng:</b><field name="object"/></li>
                                        <li><b>Loại nhắc lịch: </b><field name="type"/></li>
                                        <li><b>Ngày nhắc lịch: </b><field name="date_deadline"/></li>
                                        <li><b>Ngày tạo: </b><field name="create_date"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="activity_history_action_window">
            <field name="name">Activity History</field>
            <field name="res_model">activity.history</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_date_now': 1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('activity_history_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('activity_history_form_view')}),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('activity_history_kanban_view')})]"/>
        </record>

        <record model="ir.ui.view" id="assign_user_form_view">
            <field name="name">Assign</field>
            <field name="model">activity.history</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="user_id" options="{'no_create': True}" required="True"/>
                    </group>
                    <footer>
                        <button name="action_confirm_assign" string="Confirm" type="object" class="btn-primary" icon="fa-check text-success"/>
                        <button name="cancel" string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="schedule_transfer_reason_form_view">
            <field name="name">Schedule Transfer Reason</field>
            <field name="model">activity.history.assign</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="schedule_transfer_reason_id" required="True"/>
                            </group>
                            <group>
                                <field name="date_move_remind" required="True"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="confirm_transfer" string="Confirm" type="object" class="btn-primary" icon="fa-check text-success"/>
                        <button name="cancel" string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>


         <record id="action_activity_history_by_partner" model="ir.actions.act_window">
            <field name="name">Activity History</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">activity.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='domain'>[('partner_id', '=', active_id)]</field>
        </record>

        <menuitem name="Remind Activity" id="activity_history_menu" parent="izi_crm_interaction.partner_interaction_main_menu" sequence="3"
                  action="activity_history_action_window"/>
    </data>
</odoo>