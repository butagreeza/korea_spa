<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="report_adjusted_remain_partner_form" model="ir.ui.view">
            <field name="name">Report Adjusted Remain Partner</field>
            <field name="model">report.adjusted.remain.partner</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="create_report_adjusted_remain_partner" type="object" string="Print Report"/>
                        <button class="oe_highlight" name="create_report_adjusted_remain_partner_excel" type="object" string="Print Report Excel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="report_adjusted_remain_partner_action" model="ir.actions.act_window">
            <field name="name">Report Adjusted Remain Partner</field>
            <field name="res_model">report.adjusted.remain.partner</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="report_adjusted_remain_partner_menu" action="report_adjusted_remain_partner_action" name="Report Adjusted Remain Partner" parent="point_of_sale.menu_point_rep"/>
    </data>
</odoo>