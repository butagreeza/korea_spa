<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="report_wage_service_to_employee_form" model="ir.ui.view">
            <field name="name">Report Wage Service To Employee</field>
            <field name="model">report.wage.service.employee</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                        </group>
                        <group>
                            <field name="employee_ids" options="{'no_create':1, 'no_create_edit':1}" widget="many2many_tags"/>
                            <field name="partner_ids" options="{'no_create':1, 'no_create_edit':1}" widget="many2many_tags"/>
                            <field name="categ_ids" options="{'no_create':1, 'no_create_edit':1}" widget="many2many_tags"/>
                            <field name="type_service" widget="Selection"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="create_report_wage_service_to_employee" type="object" string="Print Report"/>
                        <button class="oe_highlight" name="create_report_wage_service_to_employee_excel" type="object" string="Print Report Excel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="report_wage_service_to_employee_action" model="ir.actions.act_window">
            <field name="name">Report Wage Service To Employee</field>
            <field name="res_model">report.wage.service.employee</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="report_wage_service_to_employee_menu" action="report_wage_service_to_employee_action" name="Report Wage Service To Employee" parent="point_of_sale.menu_point_rep"/>
    </data>
</odoo>