<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="report_partner_win_lose_form" model="ir.ui.view">
            <field name="name">Report Partner Win Lose</field>
            <field name="model">report.partner.win.lose</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                        </group>
                        <group>
                            <field name="user_id" options="{'no_create':1, 'no_create_edit':1}"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="create_report_partner_win_lose" type="object" string="Print Report"/>
                        <button class="oe_highlight" name="create_report_partner_win_lose_excel" type="object" string="Print Report Excel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="report_partner_win_lose_action" model="ir.actions.act_window">
            <field name="name">Report Partner Win Lose</field>
            <field name="res_model">report.partner.win.lose</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="report_partner_win_lose_menu" action="report_partner_win_lose_action" name="Report Partner Win Lose" parent="point_of_sale.menu_point_rep"/>
    </data>
</odoo>