<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="report_pos_actual_debt_form" model="ir.ui.view">
            <field name="name">Report Pos Actual Debt</field>
            <field name="model">report.pos.actual.debt</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_date"/>
                            <field name="to_date" required="1"/>
                        </group>
                        <group>
                            <field name="partner_ids" options="{'no_create':1, 'no_create_edit':1}" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="create_report_pos_actual_debt" type="object" string="Print Report"/>
                        <button class="oe_highlight" name="create_report_pos_actual_debt_excel" type="object" string="Print Report Excel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="report_pos_actual_debt_action" model="ir.actions.act_window">
            <field name="name">Report Pos Actual Debt</field>
            <field name="res_model">report.pos.actual.debt</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="report_pos_actual_debt_menu" action="report_pos_actual_debt_action" name="Report Pos Actual Debt" parent="point_of_sale.menu_point_rep"/>
    </data>
</odoo>