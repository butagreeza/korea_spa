<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="report_general_product_partner_use_form" model="ir.ui.view">
            <field name="name">Report General Product Partner Use</field>
            <field name="model">report.general.product.partner.use</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <label string="Hóa đơn"/>
                            <field name="picking_ids" domain="[('partner_id', 'in', partner_ids)]" options="{'no_create':1, 'no_create_edit':1}" widget="many2many_tags"/>
                            <field name="using_ids" domain="[('customer_id', 'in', partner_ids)]" options="{'no_create':1, 'no_create_edit':1}" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="to_date" required="1"/>
                            <field name="partner_ids" options="{'no_create':1, 'no_create_edit':1}" widget="many2many_tags"/>
                            <field name="product_ids" domain="[('default_code', '!=', 'DISCOUNT'), ('can_be_expensed', '=', False), ('product_tmpl_id.x_type_card', '=', 'none'), ('available_in_pos','=',True)]" options="{'no_create':1, 'no_create_edit':1}" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="create_report_general_product_partner_use" type="object" string="Print Report"/>
                        <button class="oe_highlight" name="create_report_general_product_partner_use_excel" type="object" string="Print Report Excel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="report_general_product_partner_use_action" model="ir.actions.act_window">
            <field name="name">Report General Product Partner Use</field>
            <field name="res_model">report.general.product.partner.use</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="report_general_product_partner_use_menu" action="report_general_product_partner_use_action" name="Report General Product Partner Use" parent="stock.menu_warehouse_report"/>
    </data>
</odoo>