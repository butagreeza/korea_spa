<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stock_quant_tree_korea">
            <field name="name">stock.quant.tree</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Inventory Valuation" create="0" delete="0" decoration-danger="quantity &lt; 0">
                        <field name="product_id"/>
                        <field name="location_id"/>
                        <field name="lot_id" groups="stock.group_production_lot" invisible="True"/>
                        <field name="package_id" groups="stock.group_tracking_lot" invisible="True"/>
                        <field name="owner_id" groups="stock.group_tracking_owner" invisible="True"/>
                        <field name="reserved_quantity" string="Reserved" invisible="True"/>
                        <field name="product_uom_id" groups="product.group_uom"/>
                        <field name="quantity" string="On Hand"/>
                        <field name='company_id' groups="base.group_multi_company"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="stock.quantsact"> <!-- Menu + python -->
            <field name="name">Inventory</field>
            <field name="res_model">stock.quant</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="context">{'search_default_internal_loc': 1, 'search_default_stockable': 1}</field>
            <field name="help">This analysis gives you a fast overview on the current stock level of your products and their current inventory value.</field>
        </record>
    </data>
</odoo>