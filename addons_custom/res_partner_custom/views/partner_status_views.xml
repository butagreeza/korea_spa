<odoo>
    <data>
        <record id="partner_status_tree_view" model="ir.ui.view">
            <field name="name">Partner status</field>
            <field name="model">partner.status</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_partner_status" model="ir.actions.act_window">
            <field name="name">Partner status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.status</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('res_partner_custom.partner_status_tree_view')})]"/>
        </record>

        <menuitem id="menu_partner_status"
                  name="Partner status"
                  action="action_partner_status"
                  parent="crm.crm_menu_config"/>
    </data>
</odoo>