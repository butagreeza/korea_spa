<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="pos_work_service_allocation_line_tree">
            <field name="name">pos.work.service.allocation.line.tree</field>
            <field name="model">pos.work.service.allocation.line</field>
            <field name="arch" type="xml">
                <tree default_order="date desc">
                    <field name="use_service_id"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="service_id"/>
                    <field name="employee_id"/>
                    <field name="work_lt"/>
                    <field name="work_change"/>
                    <field name="work_nv"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="pos_work_service_allocation_line_form">
            <field name="name">pos.work.service.allocation.line.form</field>
            <field name="model">pos.work.service.allocation.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2 class="text-center">CHI TIẾT LƯỢT LÀM KỸ THUẬT VIÊN</h2>
                        <group>
                            <group>
                                <field name="use_service_id"  readonly="1"/>
                                <field name="date" readonly="1"/>
                                <field name="partner_id"  readonly="1" options="{'no_create':1, 'no_create_edit':1}"/>
                                <field name="service_id"  readonly="1" options="{'no_create':1, 'no_create_edit':1}"/>
                            </group>
                            <group>
                                <field name="employee_id" options="{'no_create':1, 'no_create_edit':1}" readonly="1"/>
                                <field name="work_lt" readonly="1"/>
                                <field name="work_change" readonly="1"/>
                                <field name="work_nv" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                        <field name="message_ids" widget="mail_thread"/>-->
<!--                        <field name="activity_ids" widget="mail_activity"/>-->
<!--                    </div>-->
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_pos_work_service_allocation_line">
            <field name="name">Work Service Allocation Line</field>
            <field name="res_model">pos.work.service.allocation.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="context">{'create':False,'delete':False}</field>
        </record>

        <record id="pos_work_search_line_view" model="ir.ui.view">
            <field name="name">pos_work_line_search_view</field>
            <field name="model">pos.work.service.allocation.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="partner_id"
                           filter_domain="['|','|','|','|','|','|','|','|',('partner_id.name','ilike',self),('partner_id.phone','ilike',self),('partner_id.mobile','ilike',self),('partner_id.x_mobile2','ilike',self),('partner_id.x_old_code', 'ilike', self),('partner_id.x_code', 'ilike', self),('partner_id.display_name','ilike',self),('partner_id.ref','=',self),('partner_id.email','ilike',self)]"/>
                    <field name="employee_id" filter_domain="[('employee_id','ilike',self)]"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="date" string="Session" domain="[]" context="{'group_by' : 'date'}" />
                        <filter name="partner_id" string="Partner" context="{'group_by': 'partner_id'}"/>
                        <field name="employee_id" string="Employee" context="{'group_by': 'employee_id'}"/>
                        <field name="service_id" string="Employee" context="{'group_by': 'service_id'}"/>
                   </group>
                </search>
            </field>
        </record>

        <menuitem name='Work Service Allocation Line' id="pos_work_service_allocation_line_menu" action="action_pos_work_service_allocation_line" parent="izi_pos_custom_backend.menu_point_of_sale_service"/>
    </data>
</odoo>