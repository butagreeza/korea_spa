<?xml version="1.0"?>
<odoo>
    <data>
        <record id="inherit_add_allocation_deposit_view_pos_config_form" model="ir.ui.view">
            <field name="name">inherit_bi_pos_branch_config</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='posbox_reference']" position="after">
                    <h2>Allocation Deposit</h2>
                    <div class="row mt16 o_settings_container" id="allowed_branches">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="Allocation Deposit">
                            <div class="o_setting_left_pane">
                                <field name="x_allocation_deposit"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="x_allocation_deposit"/>
                                <div class="text-muted">
                                    Phân bổ doanh thu cho đơn đặt cọc
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>