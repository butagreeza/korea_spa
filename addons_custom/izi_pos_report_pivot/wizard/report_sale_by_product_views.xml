<odoo>
    <data>
        <record id="report_sale_by_product_form_view" model="ir.ui.view">
            <field name="name">report_sale_by_product_view</field>
            <field name="model">report.sale.by.product</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from" required="True" />
                            <field name="date_to" required="True"/>
                        </group>
                        <group>
                            <field name="user_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="partner_ids" widget="many2many_tags" context="{'user_ids': user_ids}" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <footer>
                        <button name="action_get_report_sale_by_product" context="{'type':'tree'}" string="Get Report Tree" type="object" class="btn-primary"/>
                        <button name="action_get_report_sale_by_product" context="{'type':'pivot'}" string="Get Report Pivot" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_sale_by_product_action" model="ir.actions.act_window">
            <field name="name">Report Sale By Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.sale.by.product</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="izi_pos_report_pivot.report_sale_by_product_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="report_sale_by_product_menu"
                  parent="point_of_sale.menu_point_rep"
                  action="report_sale_by_product_action"
                  sequence="5"/>

        <record id="report_sale_by_product_line_tree_view" model="ir.ui.view">
            <field name="name">report_sale_by_product_line_tree_view</field>
            <field name="model">report.sale.by.product.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id" required="1"/>
                    <field name="picking_id" required="1"/>
                    <field name="type" required="1"/>
                    <field name="partner_name" required="1" />
                    <field name="origin" required="1"/>
                    <field name="date_done" required="1"/>
                    <field name="amount" required="1" sum="Amount Total"/>
                </tree>
            </field>
        </record>

        <record id="report_sale_by_product_line_pivot_view" model="ir.ui.view">
            <field name="name">report_sale_by_product_line_pivot_view</field>
            <field name="model">report.sale.by.product.line</field>
            <field name="arch" type="xml">
                <pivot disable_linking="True">
                    <field name="product_id" type="row"/>
                    <field name="partner_id" type="row"/>
                    <field name="picking_id" type="row"/>
                    <field name="type" type="col"/>
                    <field name="date_done" type="col" interval="day"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="report_sale_by_product_line_action" model="ir.actions.act_window">
            <field name="name">Report Sale By Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.sale.by.product.line</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_type">tree</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('report_sale_by_product_line_tree_view')}),
                          (0, 0, {'view_mode': 'pivot', 'view_id': ref('report_sale_by_product_line_pivot_view')})]"/>
            <field name="target">current</field>
        </record>

    </data>
</odoo>