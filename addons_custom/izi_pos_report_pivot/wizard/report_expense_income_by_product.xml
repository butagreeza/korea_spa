<odoo>
    <data>
        <record id="report_expense_income_by_product_form_view" model="ir.ui.view">
            <field name="name">Report Expense Income By Product</field>
            <field name="model">report.expense.income</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from" required="True" />
                            <field name="date_to" required="True"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_get_report_expense_income" context="{'type':'tree', 'expense_income_by_product': True}" string="Get Report Tree" type="object" class="btn-primary"/>
                        <button name="action_get_report_expense_income" context="{'type':'pivot', 'expense_income_by_product': True}" string="Get Report Pivot" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_expense_income_by_product_action" model="ir.actions.act_window">
            <field name="name">Report Expense Income By Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.expense.income</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="izi_pos_report_pivot.report_expense_income_by_product_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="report_expense_income_by_product_menu"
                  parent="point_of_sale.menu_point_rep"
                  action="report_expense_income_by_product_action"
                  sequence="8"/>

        <record id="report_expense_income_by_product_line_tree_view" model="ir.ui.view">
            <field name="name">Report Expense Income By Product</field>
            <field name="model">report.expense.income.line</field>
            <field name="arch" type="xml">
                <tree default_order="date,bill_type">
                    <field name="date" required="1"/>
                    <field name="bill_type" required="1"/>
                    <field name="bill_name" required="1"/>
                    <field name="account_expense_income" required="1"/>
                    <field name="amount" required="1" sum="Amount Total"/>
                    <field name="journal_id" required="1"/>
                    <field name="user_id" required="1"/>
                </tree>
            </field>
        </record>

        <record id="report_expense_income_by_product_line_pivot_view" model="ir.ui.view">
            <field name="name">Report Expense Income By Product</field>
            <field name="model">report.expense.income.line</field>
            <field name="arch" type="xml">
                <pivot disable_linking="True">
                    <field name="user_id" type="row"/>
                    <field name="account_expense_income" type="row"/>
                    <field name="bill_name" type="row"/>
                    <field name="bill_type" type="col"/>
                    <field name="journal_id" type="col"/>
                    <field name="date" type="col" interval="day"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="report_expense_income_by_product_line_action" model="ir.actions.act_window">
            <field name="name">Report Expense Income By Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.expense.income.line</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_type">tree</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('report_expense_income_by_product_line_tree_view')}),
                          (0, 0, {'view_mode': 'pivot', 'view_id': ref('report_expense_income_by_product_line_pivot_view')})]"/>
            <field name="target">current</field>
        </record>

    </data>
</odoo>