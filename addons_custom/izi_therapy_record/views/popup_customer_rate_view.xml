<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_pop_up_rate_service_inherit" model="ir.ui.view">
            <field name="name">izi.service.card.using.form.view</field>
            <field name="model">izi.service.card.using</field>
            <field name="inherit_id" ref="izi_department_rate.view_pop_up_rate_service"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='service_card1_ids']" position="attributes">
                    <attribute name="attrs">{'invisible': [('type', 'not in', ['service','guarantee_bundle','guarantee'])]}</attribute>
                </xpath>
                <xpath expr="//field[@name='service_card1_ids']" position="after">
                    <br/>
                    <field name="service_bundle_ids" attrs="{'invisible': [('type', '!=', 'bundle')]}">
                        <tree editable="bottom" create="false" delete="false">
                            <field name="service_id" readonly="1" force_save="1"/>
                            <field name="employee_ids" readonly="1" force_save="1" widget="many2many_tags"/>
                            <field name="customer_rate" widget="sentiment_icon" show_all_icon="true"/>
                            <field name="customer_comment"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>