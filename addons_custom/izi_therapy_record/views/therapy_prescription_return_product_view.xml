<odoo>
    <data>
        <record id="izi_view_therapy_prescription_return_product_popup" model="ir.ui.view">
            <field name="name">therapy.prescription.return.product.popup</field>
            <field name="model">therapy.prescription.return.product</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,done" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="therapy_record_id" readonly="1"/>
                                <br/>
                                <field name="therapy_prescription_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="date_return"/>
                                <br/>
                                <field name="user_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail" name="detail_therapy_prescription_return_product">
                                <field name="therapy_prescription_return_product_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" domain="[('product_tmpl_id.type','=','product')]" options="{'no_create': True, 'no_edit': True}"/>
                                        <field name="qty"/>
                                        <field name="uom_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_confirm" confirm="Bạn có chắc chắn trả lại những sản phẩm này!" string="Confirm" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="izi_view_therapy_prescription_return_product_form_view" model="ir.ui.view">
            <field name="name">therapy.prescription.return.product.popup</field>
            <field name="model">therapy.prescription.return.product</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" states="draft"/>
                        <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" states="done"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,done" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="therapy_record_id" readonly="1"/>
                                <br/>
                                <field name="therapy_prescription_id" readonly="1"/>
                                <br/>
                                <field name="picking_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="date_return"/>
                                <br/>
                                <field name="user_id" attrs="{'readonly':[('state','!=', 'new')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail" name="detail_therapy_prescription_return_product">
                                <field name="therapy_prescription_return_product_line_ids" attrs="{'readonly':[('state','!=', 'new')]}">
                                    <tree editable="bottom">
                                        <field name="product_id" domain="[('product_tmpl_id.type','=','product')]" options="{'no_create': True, 'no_edit': True}"/>
                                        <field name="qty"/>
                                        <field name="uom_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="izi_view_therapy_prescription_return_product_tree_view" model="ir.ui.view">
            <field name="name">therapy.prescription.return.product.tree</field>
            <field name="model">therapy.prescription.return.product</field>
            <field name="arch" type="xml">
                <tree string="Therapy Prescription Return Product">
                    <field name="therapy_record_id"/>
                    <field name="therapy_prescription_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="therapy_prescription_return_product_act" model="ir.actions.act_window">
            <field name="name">Therapy Prescription Return Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">therapy.prescription.return.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('izi_therapy_record.izi_view_therapy_prescription_return_product_tree_view')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('izi_therapy_record.izi_view_therapy_prescription_return_product_form_view')})]"/>
        </record>



        <menuitem id="therapy_prescription_return_product_menu"
            name="Therapy Prescription Return Product"
            action="therapy_prescription_return_product_act"
            parent="point_of_sale.pos_config_menu_catalog"/>
    </data>
</odoo>